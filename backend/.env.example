# BSSOD Analyzer Backend - Environment Configuration
# Copy this to .env and fill in your values

# AI API Configuration (Trend Micro endpoint with Claude 4 Sonnet)
OPENAI_BASE_URL=URL HERE
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=claude-4-sonnet
AI_TIMEOUT=120.0

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# CORS Configuration (comma-separated origins)
# Add your frontend URL here for production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Limits (in MB)
MAX_UPLOAD_SIZE_MB=50
